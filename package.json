{
    "name": "github-review-reminder",
    "version": "0.1.0",
    "private": true,
    "main": "public/electron.js",
    "homepage": "./",
    "build": {
        "appId": "com.electron.reminder",
        "productName": "GITHUB-REVIEW-REMINDER",
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "buildResources": "build/"
        },
        "mac": {
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "deb"
        }
    },
    "dependencies": {
        "@types/jest": "^26.0.15",
        "@types/node": "^12.0.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "axios": "^0.24.0",
        "dotenv": "^10.0.0",
        "electron-is-dev": "^2.0.0",
        "query-string": "^7.0.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-markdown": "^8.0.1",
        "react-query": "^3.34.0",
        "react-router-dom": "6",
        "react-scripts": "4.0.3",
        "remark-gfm": "^3.0.1",
        "styled-components": "^5.3.3",
        "typescript": "^4.1.2",
        "web-vitals": "^1.0.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "dev": "tsc ./public/electron.ts && concurrently -k \"BROWSER=none yarn start\" \"yarn:electron\"",
        "electron": "wait-on tcp:3000 && electron .",
        "electron:prod": "tsc ./public/electron.ts && yarn build && electron .",
        "app:dir": "electron-builder --dir",
        "app:dist": "tsc ./public/electron.ts && yarn build && electron-builder"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/dotenv": "^8.2.0",
        "@types/query-string": "^6.3.0",
        "@types/react-query": "^1.2.9",
        "@types/styled-components": "^5.1.16",
        "concurrently": "^6.4.0",
        "electron": "^16.0.4",
        "electron-builder": "^22.14.13",
        "wait-on": "^6.0.0"
    },
    "proxy": "http://localhost:4000"
}
